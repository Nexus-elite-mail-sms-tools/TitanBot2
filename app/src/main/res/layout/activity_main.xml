<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212" 
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1E1E1E"
        android:layout_marginBottom="12dp">
        
        <TextView
            android:id="@+id/dashboardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Status: Running System\nVisits: 0 | Clicks: 0"
            android:textColor="#BB86FC"
            android:textSize="14sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/linkInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#2C2C2C"
        android:hint="Target URL (https://...)"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/manualProxyInput"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/edit_text_bg"
        android:backgroundTint="#2C2C2C"
        android:hint="Paste Proxies (IP:Port)"
        android:textColor="#FFFFFF"
        android:textColorHint="#808080"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <Switch
        android:id="@+id/proxyModeSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manual Proxy Mode"
        android:textColor="#03DAC5"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/controlButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="LAUNCH TITAN BOT"
        android:backgroundTint="#BB86FC"
        android:textColor="#000000"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        android:layout_marginBottom="10dp"/>

    <WebView
        android:id="@+id/myBrowser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E1E1E" />

</LinearLayout>
