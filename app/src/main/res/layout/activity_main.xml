        android:textColor="#00FFCC"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        android:background="#1A1A1A"
        android:padding="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/dashboardView"
